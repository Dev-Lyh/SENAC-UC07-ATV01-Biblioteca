@model List<Usuario>

<h1>Usuários cadastrados no sistema</h1>

<table>
  <thead>
    <tr>
      <th scope="row">Nome</th>
      <th scope="row">Login</th>
      <th scope="row">Tipo</th>
    </tr>
  </thead>
  <tbody>
    @foreach (Usuario u in Model)
    {
      <tr>
        <td>@u.NomeUsuario</td>
        <td>@u.Login</td>

        @if(u.Tipo == Usuario.ADMIN) {
          <td>Administrador</td>
        } else {
          <td>Padrão</td>
        }

        <td><a href="EditarUsuario?Id=@u.Id" class="btn btn-primary">EDITAR</a></td>
        <td><a href="ExcluirUsuario?id=@u.Id" class="btn btn-danger">EXCLUIR</a></td>
      </tr>    
    }
  </tbody>
</table>

<a href="/Usuario/RegistrarUsuario" class="badge badge-primary">Registrar Novo Usuário</a>